{
  "id": "openclaw-towns-plugin",
  "name": "Towns",
  "description": "Towns channel plugin (MVP)",
  "channels": ["towns"],
  "configSchema": {
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "channels": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "towns": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "enabled": { "type": "boolean" },
              "appPrivateData": { "type": "string", "minLength": 1 },
              "jwtSecret": { "type": "string", "minLength": 1 },
              "webhookPath": { "type": "string", "minLength": 1 },
              "allowFrom": {
                "type": "array",
                "items": { "type": "string" }
              },
              "policy": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "mode": {
                    "type": "string",
                    "enum": ["READ_ONLY", "CONFIRM_ALWAYS", "BOUNDED_AUTO"]
                  },
                  "allowedOwnerUserIds": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "limits": {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {
                      "maxPerTxUsd": { "type": "number", "minimum": 0 },
                      "maxPerDayUsd": { "type": "number", "minimum": 0 }
                    }
                  },
                  "integrations": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "object",
                      "additionalProperties": true,
                      "properties": {
                        "enabled": { "type": "boolean" },
                        "execEnabled": { "type": "boolean" },
                        "payEnabled": { "type": "boolean" }
                      }
                    }
                  }
                }
              },
              "accounts": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "additionalProperties": true,
                  "properties": {
                    "enabled": { "type": "boolean" },
                    "name": { "type": "string" },
                    "appPrivateData": { "type": "string", "minLength": 1 },
                    "jwtSecret": { "type": "string", "minLength": 1 },
                    "webhookPath": { "type": "string", "minLength": 1 },
                    "allowFrom": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "policy": {
                      "type": "object",
                      "additionalProperties": true,
                      "properties": {
                        "mode": {
                          "type": "string",
                          "enum": ["READ_ONLY", "CONFIRM_ALWAYS", "BOUNDED_AUTO"]
                        },
                        "allowedOwnerUserIds": {
                          "type": "array",
                          "items": { "type": "string" }
                        },
                        "limits": {
                          "type": "object",
                          "additionalProperties": true,
                          "properties": {
                            "maxPerTxUsd": { "type": "number", "minimum": 0 },
                            "maxPerDayUsd": { "type": "number", "minimum": 0 }
                          }
                        },
                        "integrations": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "object",
                            "additionalProperties": true,
                            "properties": {
                              "enabled": { "type": "boolean" },
                              "execEnabled": { "type": "boolean" },
                              "payEnabled": { "type": "boolean" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
